/**
 * Implements hook_node_grants().
 */
function novo_master_node_grants($account, $op) {
  $grants = array();
  if ($op == 'view') {

    $rids = array();
    foreach ($account->roles as $rid => $role) {
      $rids[] = $rid;
    }
    $grants["novo_master_access_webform"] = $rids;
    $grants["novo_master_access_reviewer"] = $rids;
  }
  return $grants;
}

/**
 * Implements hook_node_access_records().
 */
function novo_master_node_access_records($node) {
  $grants = array();

  if ($node->type == 'webform') {
    $grants[] = array(
      'realm' => "novo_master_access_webform",
      'gid' => NOVO_MASTER_ROLE_ANON,
      'grant_view' => 1,
      'grant_update' => 0,
      'grant_delete' => 0,
      'priority' => 1,
    );
    $grants[] = array(
      'realm' => "novo_master_access_webform",
      'gid' => NOVO_MASTER_ROLE_AUTH,
      'grant_view' => 1,
      'grant_update' => 0,
      'grant_delete' => 0,
      'priority' => 1,
    );
    $grants[] = array(
      'realm' => "novo_master_access_webform",
      'gid' => NOVO_MASTER_ROLE_VOLUNTEER,
      'grant_view' => 1,
      'grant_update' => 0,
      'grant_delete' => 0,
      'priority' => 1,
    );
    $grants[] = array(
      'realm' => "novo_master_access_webform",
      'gid' => NOVO_MASTER_ROLE_REVIEWER,
      'grant_view' => 1,
      'grant_update' => 0,
      'grant_delete' => 0,
      'priority' => 1,
    );
  }

  // Allow reviewer access.
  if ($node->type == 'staff' || $node->type == 'kids' || $node->type == 'application') {
    $grants[] = array(
      'realm' => "novo_master_access_reviewer",
      'gid' => NOVO_MASTER_ROLE_REVIEWER,
      'grant_view' => 1,
      'grant_update' => 0,
      'grant_delete' => 0,
      'priority' => 1,
    );
  }

  $grants[] = array(
    'realm' => "novo_master_access_reviewer",
    'gid' => NOVO_MASTER_ROLE_ADMIN,
    'grant_view' => 1,
    'grant_update' => 0,
    'grant_delete' => 0,
    'priority' => 1,
  );

  $grants[] = array(
    'realm' => "novo_master_access_webform",
    'gid' => NOVO_MASTER_ROLE_ADMIN,
    'grant_view' => 1,
    'grant_update' => 0,
    'grant_delete' => 0,
    'priority' => 1,
  );

  return $grants;
}
