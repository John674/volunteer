/**
 * Implements hook_taxonomy_vocabulary_insert().
 */
function novo_taxonomy_feature_taxonomy_vocabulary_insert($vocabulary) {

  if ($vocabulary->machine_name == NOVO_VOCABULARY_STATES) {
